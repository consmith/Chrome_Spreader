{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension creates a speed reading mode for any article on Chrome",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
		"default_popup":"popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
		"https://*/*",
    "http://*/*",
    "tabs"
  ],
  "content_scripts": [
		{
			"css": ["styles.css"],
    	"js": ["content.js"],
    	"matches": ["http://*/*", "http://*/*"],
			"all_frames": true
  	}
	]
}
